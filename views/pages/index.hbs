<div class="containerr">
    {{#if posts}}
    {{#each posts}}
    <div class="card">
        <div class="imgContainer">
            <img src="/images/posts/{{this._id}}.jpg" alt="{{this.smallTitle}} - Spotit inc">
        </div>
        <div class="infoBox">
            <div class="title">
                {{this.smallTitle}}
            </div>
            <div class="price">
                <span class="p_price">{{this.smallDescription}}</span>
            </div>
            <div class="buttonGroup">
                <button onclick="location.href = '/post/{{this._id}}'" class="buy">
                    <box-icon name='chevron-down'></box-icon>
                </button>
            </div>
        </div>
    </div>
    {{/each}}
    {{/if}}
</div>